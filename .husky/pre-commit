#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# ============================================================================
# PRE-COMMIT HOOKS FÃœR AUTOMATISIERTES TESTING
# ============================================================================

echo "ğŸ§ª Running Pre-commit Tests..."

# Type Checking
echo "ğŸ” Type Checking..."
npm run type-check
if [ $? -ne 0 ]; then
    echo "âŒ Type checking failed"
    exit 1
fi

# Linting
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
    echo "âŒ Linting failed"
    exit 1
fi

# Quick Unit Tests (fast subset)
echo "ğŸ§ª Running Quick Unit Tests..."
npm run test -- --run --reporter=verbose --coverage=false
if [ $? -ne 0 ]; then
    echo "âŒ Unit tests failed"
    exit 1
fi

# Bundle Size Check
echo "ğŸ“¦ Checking Bundle Size..."
npm run build
if [ $? -ne 0 ]; then
    echo "âŒ Build failed"
    exit 1
fi

# Check bundle size (should be under 5MB)
BUNDLE_SIZE=$(du -sb dist | cut -f1)
if [ $BUNDLE_SIZE -gt 5242880 ]; then # 5MB limit
    echo "âŒ Bundle size ($BUNDLE_SIZE bytes) exceeds 5MB limit"
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
echo "ğŸš€ Ready to commit!"